<html>
    <head>
        <title>
            Country and Zip
        </title>
        <link href="/styles.css" rel= "stylesheet">
    </head>
    <body>
        <h1>
            Select a country and enter a zip code
        </h1>
        <form action="/addToDo" method="POST">
            <input type = "text" name="newtodo" placeholder="add new item">
            <button type = 'submit'>
                Add To-Do 
            </button>
            <h2>
                Current Tasks
            </h2>
            <% for(var i = 0; i< tasks.length; i++){ %>
                <li><input type="checkbox" name="check" value="<%= tasks[i]._id %>" /> <%= tasks[i].item %></li>
            <%} %>
        
            <button formaction="/removeToDo" type="submit">
                Remove
            </button>
        </form>
        <form action='/deleteToDo'' method="POST">
        <h2>
            Completed Tasks
        </h2>
        <% for(var i = 0; i< completed.length; i++){ %>
            <li><input type="checkbox" name="delete" value= "<%= completed[i]._id %>" /> <%= completed[i].item %></li>
        <% } %>
        <button formaction='/deleteToDo' type="submit">
            Delete
        </button>
    </form>
    </body>
</html>